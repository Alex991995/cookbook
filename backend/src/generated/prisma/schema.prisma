generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String
  image    String?

  recipe         Recipe[]
  cookbook       Cookbook[]
  likes          Recipe_Likes[]
  Cookbook_Likes Cookbook_Likes[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Recipe {
  id             String   @id @default(uuid())
  title          String
  description    String?
  ingredients    String[]
  direction      String[]
  views          Int      @default(0)
  estimated_time DateTime @db.Time()
  image          String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user_id String?

  user     User?           @relation(fields: [user_id], references: [id])
  comment  CommentRecipe[]
  cookbook Cookbook[]
  likes    Recipe_Likes[]

  @@map("recipe")
}

model Recipe_Likes {
  id        String  @id @default(uuid())
  recipe_id String?
  user_id   String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  recipe Recipe? @relation(fields: [recipe_id], references: [id])
  user   User?   @relation(fields: [user_id], references: [id])

  @@map("recipe_likes")
}

model CommentRecipe {
  id          String @id @default(uuid())
  description String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  recipe_id String?

  recipe Recipe? @relation(fields: [recipe_id], references: [id])

  @@map("comment_recipe")
}

model Cookbook {
  id          String   @id @default(uuid())
  title       String
  description String?
  likes       Int      @default(0)
  image       String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user_id   String?
  recipe_id String?

  user            User?             @relation(fields: [user_id], references: [id])
  recipe          Recipe?           @relation(fields: [recipe_id], references: [id])
  commentCookbook CommentCookbook[]
  Cookbook_Likes  Cookbook_Likes[]

  @@map("cookbook")
}

model Cookbook_Likes {
  id          String  @id @default(uuid())
  cookbook_id String?
  user_id     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  cookbook Cookbook? @relation(fields: [cookbook_id], references: [id])
  user     User?     @relation(fields: [user_id], references: [id])

  @@map("cookbook_likes")
}

model CommentCookbook {
  id          String @id @default(uuid())
  description String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  cookbook_id String?

  cookbook Cookbook? @relation(fields: [cookbook_id], references: [id])

  @@map("comment_cookbook")
}
